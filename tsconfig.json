{
	"compilerOptions": {
		"strict": true,
		"incremental": true,

		"forceConsistentCasingInFileNames": true,

		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",

		"paths": {
			"react/jsx-runtime": [ "./node_modules/preact/jsx-runtime" ]
		}
	},
	"include": [
		"./src/**/*"
	]
}